generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model chapter_leaders {
  id                     Int      @id @default(autoincrement())
  first_name             String?
  last_name              String?
  email                  String?  @unique
  phone                  String?  @unique
  address1               String?
  address2               String?
  city                   String? 
  state                  String?
  zip                    String?
  reserved_cities        String[]
  reserved_states        String[]
  referred_by_first_name String?
  referred_by_last_name  String?
  title                  Title[]  @default([chapter_leader])
  created_at             DateTime @default(now()) @db.Timestamptz // Use timestamptz
  updated_at             DateTime @updatedAt @db.Timestamptz // Use timestamptz
}

enum Title {
  chapter_leader
  state_director
  regional_leader 
}
